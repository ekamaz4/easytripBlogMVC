@model easy_trip.Models.Siniflar.Yorumlar
@{
    ViewData["Title"] = "YorumGetir";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Yorum Getir</h1>
<div>
    @using (Html.BeginForm("YorumGuncelle", "Admin", FormMethod.Post))
    {
        @Html.LabelFor(x => x.ID    )
        @Html.TextBoxFor(x=>x.ID , new{@class = "form-control ", @readonly ="readonly"})
        <br />
        @Html.LabelFor(x => x.KullaniciAdi)
        @Html.TextBoxFor(x=>x.KullaniciAdi, new{@class = "form-control"})
        <br />
        @Html.LabelFor(x => x.MailAdres)
        @Html.TextBoxFor(x=>x.MailAdres , new{@class = "form-control"})
        <br />
        @Html.LabelFor(x => x.Yorum)
        @Html.TextAreaFor(x=>x.Yorum,10,1 , new{@class = "form-control"})

        <br /> <br />
        <button class="btn btn-success">Yorumu Güncelle</button>
    }
</div>

