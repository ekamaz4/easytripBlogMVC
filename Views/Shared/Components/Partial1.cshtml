@using easy_trip.Models.Siniflar
@inject Context c;
@model List<Blog>
@{
    var Bloglar = c.Blogs.OrderByDescending(x => x.ID).Take(3).ToList();
}
<div class="con-bot">
    @foreach (var x in Bloglar)
    {
        if(Bloglar.Count <2)
        {
            <div class="left">
                <div class="bot-left">
                    <img src="@x.BlogImage" style="height:150px; width:300px;" alt="" />
                    <span class="date" style="font-size:10px; padding-top:0px;">@x.Tarih.ToString("dd/MM/yyyy")</span>
                </div>
                <div class="left-text">
                    <div style="background-color:aqua; width:100px;height:50px;">
                        <h4>@x.Baslik</h4>
                    </div>

                    <p class="text-start">@(x.Aciklama.Length>80? x.Aciklama.Substring(0, 80) + "..." : x.Aciklama)</p>
                    <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını oku </span></a></p>
                </div>
            </div>
        }
        else
        {
            <div class="right">
                <div class="bot-left">
                    <img src="@x.BlogImage" style="height:150px; width:300px;" alt="" />
                    <span class="date" style="font-size:10px;">@x.Tarih.ToString("dd/MM/yyyy")</span>
                </div>

                <div class="left-text">
                    <div style="height:40px;">
                        <h4>@x.Baslik</h4>
                    </div>
                    <p class="text-start">@(x.Aciklama.Length > 80 ? x.Aciklama.Substring(0, 80) + "..." : x.Aciklama)</p>
                    <p><a href="/Blog/BlogDetay/@x.ID"><span class="read">Devamını oku </span></a></p>
                </div>
            </div>
        }
    }
  
