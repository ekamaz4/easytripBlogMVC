@model easy_trip.Models.Siniflar.BlogYorum

<div class="content-form">
    <h3>Yorum Yap </h3>
    <form method="post" action="/Blog/YorumYap">
        <input type="hidden" placeholder="ID" name="Blogid" value="@Model.Deger1.First().ID" required />
        <input type="text" placeholder="Kullanıcı Adı" name="KullaniciAdi" required />
        <input type="text" placeholder="Mail Adresi" name="MailAdres" required />
        <textarea placeholder="Mesaj yazınız.." name="Yorum"></textarea>
        <input type="submit" value="Gönder" />
    </form>
</div>